<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.javahomework.MenuController">
    <top>
        <Button mnemonicParsing="false" onAction="#onHomeButtonClick" text="Home" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="20.0"/>
            </BorderPane.margin>
            <font>
                <Font size="16.0"/>
            </font>
        </Button>
    </top>
    <center>
        <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
              prefHeight="400.0" prefWidth="600.0" spacing="35.0">
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#switchToCustomerOptions"
                    text="Add Customer" textAlignment="CENTER"/>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#switchToProductOptions"
                    text="Add Product"/>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#switchToRepairOptions"
                    text="Add Repair"/>
        </HBox>
    </center>

</BorderPane>

